@page "/login"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<h3>Connexion</h3>

<div class="login-container">
    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="login">Nom d'utilisateur</label>
            <InputText id="login" class="form-control" @bind-Value="loginModel.Login" />
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
        </div>

        <button type="submit" class="btn btn-primary">Se connecter</button>
    </EditForm>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger mt-3">
            @errorMessage
        </div>
    }
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        try
        {
            var response = await HttpClient.PostAsJsonAsync("api/auth/login", loginModel);

            if (response.IsSuccessStatusCode)
            {
                // Navigation vers la page des parties en cas de succès
                NavigationManager.NavigateTo("/games");
            }
            else
            {
                // Afficher un message d'erreur
                errorMessage = "Nom d'utilisateur ou mot de passe incorrect.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Une erreur est survenue lors de la connexion. Veuillez réessayer.";
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "Le nom d'utilisateur est requis.")]
        public string Login { get; set; } = string.Empty;

        [Required(ErrorMessage = "Le mot de passe est requis.")]
        public string Password { get; set; } = string.Empty;
    }
}
