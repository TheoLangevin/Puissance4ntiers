@inherits LayoutComponentBase
@using Puissance4Web.Components.Layout
@rendermode InteractiveServer

<div class="page">
</div>
<div class="main-container">
    <header>
        <h1>Puissance 4</h1>
        <nav>
            <a href="/">Accueil</a>
            <a href="/games">Liste des parties</a>
            <a href="/create-game">Créer une partie</a>
        </nav>
        <button class="btn btn-outline-danger" @onclick="Logout">
            <i class="bi bi-box-arrow-right"></i> Logout
        </button>

    </header>
    <main>
        @Body
    </main>
</div>

<style>
    .main-container {
        font-family: Arial, sans-serif;
        margin: 0 auto;
        max-width: 800px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #ccc;
    }

    nav a {
        margin: 0 10px;
        text-decoration: none;
        color: blue;
    }

    nav a:hover {
        text-decoration: underline;
    }

    main {
        padding: 1rem;
    }
</style>

@code {
    [Inject] private Blazored.LocalStorage.ILocalStorageService LocalStorage { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }

    private bool isReady;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isReady = true; // Composant prêt pour les appels interop JS
            StateHasChanged();
        }
    }

    private async Task Logout()
    {
        if (!isReady) return;

        await LocalStorage.RemoveItemAsync("authToken");
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}